{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idp</th>
                <th>Prix</th>
                <th>Description</th>
                <th>Image</th>
                <th>NomProduit</th>
                <th>NombreProduits</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idp }}</td>
                <td>{{ produit.prix }}</td>
                <td>{{ produit.description }}</td>
                <td>{{ produit.image }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.nombreProduits }}</td>
                <td>
                    <a href="{{ path('app_produits_show', {'idp': produit.idp}) }}">show</a>
                    <a href="{{ path('app_produits_edit', {'idp': produit.idp}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_produits_new') }}">Create new</a>
{% endblock %}
