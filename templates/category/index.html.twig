{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idcategorie</th>
                <th>Nomcategorie</th>
                <th>Descriptioncategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.idcategorie }}</td>
                <td>{{ category.nomcategorie }}</td>
                <td>{{ category.descriptioncategorie }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'idcategorie': category.idcategorie}) }}">show</a>
                    <a href="{{ path('app_category_edit', {'idcategorie': category.idcategorie}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
